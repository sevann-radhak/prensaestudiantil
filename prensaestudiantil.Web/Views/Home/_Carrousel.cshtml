@model prensaestudiantil.Web.Models.MainIndexViewModel
<style>
    .carousel .carousel-inner {
        height: 480px;
    }
    
    .carousel .carousel-inner img {
        width: 100%;
        height: 480px;
        width: auto;
        margin: 0px auto;
    }

    .carousel-caption {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
    }
</style>

<div id="myCarousel"
     class="carousel slide border-radius"
     data-ride="carousel"
     data-interval="6000"
     style="height: 480px;">
    <ol class="carousel-indicators">
        @{
            int i = 0;
        }

        @foreach (var item in Model.PublicationImages)
        {
            if (i == 0)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>

            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>
            }
            i++;
        }
    </ol>
    <div class="carousel-inner" role="listbox" style="align-content: center">
        @{
            int j = 0;
            string className = string.Empty;
        }

        @foreach (var item in Model.PublicationImages)
        {
            className = j == 0 ? "item active" : "item";

            <div class="@className">
                <img src="@item.ImageFullPath"
                     alt="@item.Publication.Title"
                     class="img-responsive"/>
                <div class="carousel-caption" role="option">
                    <div class="border-radius" style="filter:alpha(opacity=55); opacity:0.5; background-color: black;">
                        <a asp-action="Details" asp-controller="Publications" asp-route-id="@item.Publication.Id" class="btn-link">
                            <span class="tex" style="font-size: small; color: white">
                                @item.Description
                            </span>
                        </a>
                    </div>
                </div>
            </div>

            j++;
        }

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
