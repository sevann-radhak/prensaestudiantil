@model prensaestudiantil.Web.Models.PublicationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Noticia</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <partial name="_Publication" />

            <div class="form-group" style="text-align: center">
                <a onclick="history.go(-1)" class="btn btn-danger">Cancelar</a>
                <a asp-action="AddEditImages" asp-route-id="@Model.Id" class="btn btn-primary">Editar Imágenes</a>
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>

    @if (@Url.Content(Model.ImageUrl) != null)
    {
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)"
                 alt="@Model.Title"
                 title="@Model.Title"
                 style="width:300px;height:300px;max-width: 100%; height: auto;" />
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}