@model prensaestudiantil.Web.Models.PublicationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div>
                <div class="form-group" style="width: 30%; float: left">
                    <label asp-for="PublicationCategoryId" class="control-label"></label>
                    <select asp-for="PublicationCategoryId" asp-items="Model.PublicationCategories" class="form-control" required>
                        <option disabled selected value="0"> --Select a Category--</option>
                    </select>
                    <span asp-validation-for="PublicationCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 70%; float: right; padding-left: 20px;">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <br clear="all" />
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div>
                <div class="form-group" style="width: 30%; float: left">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" accept=".png, .jpg, .jpeg" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group" style="width: 70%; float: right; padding-left: 20px;">
                    <label asp-for="ImageDescription" class="control-label"></label>
                    <input asp-for="ImageDescription" class="form-control" />
                    <span asp-validation-for="ImageDescription" class="text-danger"></span>
                </div>

                <br clear="all" />
            </div>

            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <textarea asp-for="Header" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Footer" class="control-label"></label>
                <input asp-for="Footer" class="form-control" />
                <span asp-validation-for="Footer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="AddEditImages" asp-route-id="@Model.Id" class="btn btn-primary">Edit Images</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)"
                 alt="@Model.Title"
                 title="@Model.Title"
                 style="width:300px;height:300px;max-width: 100%; height: auto;" />
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

