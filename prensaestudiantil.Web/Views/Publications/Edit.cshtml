@model prensaestudiantil.Web.Models.PublicationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <partial name="_Publication" />

            <div class="form-group">
                <a asp-action="Index" class="btn btn-default">Back to Publications</a>
                <a asp-action="AddEditImages" asp-route-id="@Model.Id" class="btn btn-primary">Edit Images</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)"
                 alt="@Model.Title"
                 title="@Model.Title"
                 style="width:300px;height:300px;max-width: 100%; height: auto;" />
    <a asp-action="Index">Back to Publications</a>
        }
    </div>
</div>

