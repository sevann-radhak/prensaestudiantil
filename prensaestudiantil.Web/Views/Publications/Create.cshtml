@model prensaestudiantil.Web.Models.PublicationViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear nueva Noticia</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Publication" />

            <div class="form-group" style="text-align: center">
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                <input type="submit" value="Crear y Agregar Imágenes" asp-route-addImages="@true" class="btn btn-default btn-primary" />
                <input type="submit" value="Crear" class="btn btn-default btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
