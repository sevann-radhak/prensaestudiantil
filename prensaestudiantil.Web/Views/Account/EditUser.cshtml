@model prensaestudiantil.Web.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit " + @Model.FullName;
}

<h2>Editar @Model.FullName</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />




            @if (User.IsInRole("Manager"))
            {
                @if (@Model.UserName == "sevann.radhak@gmail.com" || @Model.UserName == "prensaestudiantil@hotmail.com")
                {
                    <div class="form-group col-md-12">
                        <div class="col-md-6">
                            <div class="form-group" style="text-align: right">
                                <div class="form-check">
                                    <input asp-for="IsEnabled" type="checkbox" class="form-check-input" disabled />
                                    <label asp-for="IsEnabled" id="IsEnabled" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsEnabled" class="text-warning"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="IsManager" type="checkbox" class="form-check-input" disabled />
                                    <label asp-for="IsManager" id="IsManager" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsManager" class="text-warning"></span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-12">
                        <div class="col-md-6">
                            <div class="form-group" style="text-align: right">
                                <div class="form-check">
                                    <input asp-for="IsEnabled" type="checkbox" class="form-check-input" />
                                    <label asp-for="IsEnabled" id="IsEnabled" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsEnabled" class="text-warning"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="IsManager" type="checkbox" class="form-check-input" />
                                    <label asp-for="IsManager" id="IsManager" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsManager" class="text-warning"></span>
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                <div class="form-group col-md-12">
                    <div class="col-md-6">
                        <div class="form-group" style="text-align: right">
                            <div class="form-check">
                                <input asp-for="IsEnabled" type="checkbox" class="form-check-input" disabled />
                                <label asp-for="IsEnabled" id="IsEnabled" class="form-check-label"></label>
                            </div>
                            <span asp-validation-for="IsEnabled" class="text-warning"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="IsManager" type="checkbox" class="form-check-input" disabled />
                                <label asp-for="IsManager" id="IsManager" class="form-check-label"></label>
                            </div>
                            <span asp-validation-for="IsManager" class="text-warning"></span>
                        </div>
                    </div>
                </div>
            }

            <partial name="_User" />

            <div class="form-group" style="text-align: center">
                <a onclick="history.go(-1)" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>

    <partial name="_UserImage" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

