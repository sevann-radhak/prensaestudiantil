@model prensaestudiantil.Web.Models.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit @Model.FullName</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditUserByAdmin" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            @if (!(Model.UserName == "sevann.radhak@gmail.com" || Model.UserName == "prensaestudiantil@hotmail.com"))
            {
                <div class="form-group col-md-12">
                    <div class="col-md-6">
                        <div class="form-group" style="text-align: right">
                            <div class="form-check">
                                <input asp-for="IsEnabled" type="checkbox" class="form-check-input" />
                                <label asp-for="IsEnabled" class="form-check-label"></label>
                            </div>
                            <span asp-validation-for="IsEnabled" class="text-warning"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="IsManager" type="checkbox" class="form-check-input" />
                                <label asp-for="IsManager" class="form-check-label"></label>
                            </div>
                            <span asp-validation-for="IsManager" class="text-warning"></span>
                        </div>
                    </div>
                </div>
            }

            <partial name="_User" />

            <div class="form-group" style="text-align: center">
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>

    <partial name="_UserImage" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
